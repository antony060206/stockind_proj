<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="stockproj.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:stockproj"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Ticker:"  Margin="0,5,10,0"  HorizontalAlignment="Center"/>
            <TextBlock Text="interval: (Default 1 day)" Margin="0,15,10,0" HorizontalAlignment="Center"/>
            <TextBlock Text="Output size: (Default 5)" Margin="0,15,10,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel>
            <TextBox x:Name="ticker"  Width="150" HorizontalAlignment="Center"/>
            <TextBox x:Name="Interval"  Width="150" HorizontalAlignment="Center"/>
            <TextBox x:Name="Output"  Width="150" HorizontalAlignment="Center"/>
        </StackPanel>
        

        <StackPanel>
            <Button Content="Search" Margin="10,0,0,0" HorizontalAlignment="Center" Click="search"/>
            <Button Content="Indicators" Margin="10,0,0,0" HorizontalAlignment="Center" Click="indicator_search"/>
        </StackPanel>


    </StackPanel>
</Page>
